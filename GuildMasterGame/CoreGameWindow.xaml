<Window x:Class="GuildMasterGame.CoreGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuildMasterGame"
        mc:Ignorable="d"
        Title="CoreGameWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="QuestionTextBlock" HorizontalAlignment="Left" Margin="100,40,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="110" Width="638"/>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="100,179,0,0" VerticalAlignment="Top" Width="173" Height="67" FontFamily="Gill Sans Nova" FontSize="18" Click="AnswerButton_Click"/>
        <Button x:Name="DenyButton" Content="Deny" HorizontalAlignment="Left" Margin="565,179,0,0" VerticalAlignment="Top" Width="173" Height="67" FontFamily="Gill Sans Nova" FontSize="20" Click="AnswerButton_Click"/>
        <Label x:Name="ScoreLabel" Content="Score" HorizontalAlignment="Left" Margin="379,269,0,0" VerticalAlignment="Top" FontFamily="Gill Sans Nova" FontSize="20"/>
        <TextBox x:Name="ScoreTextBox" HorizontalAlignment="Left" Height="23" Margin="351,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Gill Sans Nova" FontSize="20"/>
    </Grid>
</Window>
